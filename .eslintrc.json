{
    "env": {
        "node": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "plugins": ["simple-import-sort"],
    "root": true,
    "rules": {
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
        "eol-last": [
            "error",
            "always"
        ],
        "simple-import-sort/imports": "error",
        "simple-import-sort/exports": "error"
    }
}
